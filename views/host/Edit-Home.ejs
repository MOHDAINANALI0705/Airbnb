<%- include('../partials/head')%>
<%- include('../partials/nav')%>

<form action="<%= editing ? "/edit-home":"/addhome" %>" method="POST" style="background:#fff;max-width:400px;margin:40px auto;padding:32px 28px 24px 28px;border-radius:16px;box-shadow:0 4px 24px rgba(0,0,0,0.08);">
  <input type="hidden" name="id" value="<%= editing ? home._id : '' %>"/>
  <h2 style="text-align:center;margin-bottom:24px;color:#ff5a5f;letter-spacing:1px;"><%= editing ? "Edit":"Host" %>Your Home</h2>
  <label for="housename" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Home Name</label>
  <input type="text" value="<%= editing ? home.housename:'' %>"  id="housename" name="housename" required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;"></input>
  
  
  <label for="location" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Location</label>
  <input type="text"  value="<%= editing ? home.location:'' %>" id="location" name="location" min="0" step="0.01" required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;">

  <label for="price" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Price (Rs)</label>
  <input type="number"  value="<%= editing ? home.price:'' %>"id="price" name="price" min="0" step="0.01" required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;">
  
  <label for="ratings" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Ratings</label>
  <input type="number"  value="<%= editing ? home.ratings:'' %>" id="ratings" name="ratings" min="0" max="10" step="0.1" required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;">
  
  <label for="photoURL" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Photo URL</label>
  <input type="url"   value="<%= editing ? home.photoURL:'' %>"id="photoURL" name="photoURL" required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;">
  
  <label for="description" style="display:block;margin-bottom:6px;font-weight:500;color:#333;">Description</label>
  <textarea type="text"   id="description" name="description"  required style="width:100%;padding:10px 12px;margin-bottom:18px;border:1px solid #ddd;border-radius:8px;font-size:1rem;transition:border 0.2s;background:#fafafa;"><%= editing ? home.ratings:'' %></textarea>
  
  <button type="submit" style="width:100%;padding:12px 0;background:#ff5a5f;color:#fff;font-size:1.1rem;font-weight:bold;border:none;border-radius:8px;cursor:pointer;transition:background 0.2s;"><%= editing ? "Update":"Submit" %></button>
</form>
